<Window x:Class="WPF3DTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF3DTest"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!--<local:HelixPlot x:Name="plot" ShowViewCube="False"></local:HelixPlot>-->

        <local:HelixPlot ZoomExtentsWhenLoaded="False" ShowCoordinateSystem="False" Margin="0,0,0,1">
            <!--<h:HelixViewport3D.Camera>
                HelixViewport3D.ZoomExtentsWhenLoaded will figure out the position of the Camera
                <PerspectiveCamera LookDirection="5,10,-10" UpDirection="0,0,1"/>
                <PerspectiveCamera Position="20,20,20" LookDirection="-1,-1,-0.8" FieldOfView="60" />
            </h:HelixViewport3D.Camera>-->

            <!-- Lights -->
            <ModelVisual3D Content="{Binding Lights}"/>

            <!-- The plot visual (surface, axes and labels) -->
            <local:SurfacePlotVisual3D Points="{Binding Data}"  SurfaceBrush="{Binding SurfaceBrush}" />

        </local:HelixPlot>
    </Grid>
</Window>
